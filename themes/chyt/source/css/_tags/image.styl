.md .img
  object-fit: contain

img.inline
  display: inline !important
  vertical-align: middle
  transform: translateY(-4px)
p .img-alt
  display: inline-block
  width: 100%
.img-wrap
  position relative
  padding-bottom 20px
  span.image-caption
    position absolute
    color #666
    font-size 12px
    bottom 10px
    left 50%
    transform translateX(-50%)
  
