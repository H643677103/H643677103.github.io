body[data-type="stickers"] #web_bg
  background: var(--chyt-background);

body[data-type="stickers"] #page
  border: 0;
  box-shadow: none !important;
  padding: 0 !important;
  background: 0 0 !important;

body[data-type="stickers"] #page .page-title
  display: none;

.stickers-item
  .stickers-item-content
    display: flex
    flex-direction: row
    flex-wrap: wrap
    margin: 0 -8px
    .stickers-item-content-item
      width: calc(20% - 12px)
      border-radius: 12px
      border: var(--style-border-always)
      overflow: hidden
      margin: 8px 6px
      background: var(--chyt-card-bg)
      box-shadow: var(--chyt-shadow-border)
      min-height: 265px
      position: relative
      +maxWidth1200()
        width: calc(25% - 12px)
      +maxWidth768()
        width: 50%
      
      .stickers-item-content-item-label
        position: absolute
        left: 0
        top: 10px
        padding: 5px 8px
        background: var(--chyt-card-bg)
        border-radius: 3px
        border: 1px solid var(--chyt-card-border)
        font-size: 16px
        font-weight: bold
        color: var(--chyt-card-text)
        line-height: 1
        white-space: nowrap
        box-shadow: var(--chyt-shadow-black);

      .stickers-item-content-item-info
        padding: 8px 16px 16px 16px
        margin-top: 12px

      .stickers-item-content-item-name
        font-size: 18px
        font-weight: bold
        line-height: 1
        margin-bottom: 8px
        white-space: nowrap
        overflow: hidden
        text-overflow: ellipsis
        width: fit-content
        cursor pointer
        &:hover
          color: var(--chyt-main)

      .stickers-item-content-item-specification
        font-size: 12px
        color: var(--chyt-secondtext)
        line-height: 16px
        margin-bottom: 5px
        white-space: nowrap
        overflow: hidden
        text-overflow: ellipsis

      .stickers-item-content-item-description
        line-height: 20px
        color: var(--chyt-secondtext)
        height: 60px
        display: -webkit-box
        overflow: hidden
        -webkit-line-clamp: 3
        -webkit-box-orient: vertical
        font-size: 14px

      a.stickers-item-content-item-link
        font-size: 12px
        background: var(--chyt-gray-op)
        padding: 4px 8px
        border-radius: 8px
        cursor: pointer

        &:hover
          background: var(--chyt-main)
          color: var(--chyt-white)

      .stickers-item-content-item-cover
        width: 100%
        height: 140px
        background: var(--chyt-secondbg)
        display: flex
        justify-content: center
        align-items: center;

      img.stickers-item-content-item-image
        object-fit: contain
        height: 80%
        width: 100%

      .stickers-item-content-item-toolbar
        display: flex
        justify-content: space-between
        position: absolute
        bottom: 12px
        left: 0
        width: 100%
        padding: 0 16px